{
  "name": "oexwallet",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "oex钱包",
  "icons":{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action":{
		"default_icon": "img/icon.png",
		"default_title": "OexWallet",
		"default_popup": "index.html"
  },
	"permissions":[
		"storage",
		"tabs",
		"http://*/*", 
		"https://*/*" 
	],
	"web_accessible_resources": ["js/oexwalletInject.js"],
  "content_scripts": 
	[
		{
			
			"matches": [
				"file://*/*",
				"http://*/*",
				"https://*/*"],
			"js": ["js/jquery-2.1.0.js", "js/oexwalletContentScript.js"],
			"run_at": "document_start"
		}
	]
 
}